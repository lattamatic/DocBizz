<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--fragment_referrals_sent and fragment_referrals_inbox as the 2 pages of view pager-->

    <it.neokree.materialtabs.MaterialTabHost
        android:id="@+id/materialTabHostText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        app:textColor="@color/myPrimaryColor"
        app:primaryColor="@color/myBackgroundColor"
        app:accentColor="#08088A" />

    <android.support.v4.view.ViewPager
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:id="@+id/pager" />

</LinearLayout>